<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ice="http://www.icesoft.com/icefaces/component"
	template="/WEB-INF/templates/defaultTemplate.jspx">
<ice:outputHead>
	<ice:outputStyle href="./xmlhttp/css/rime/rime.css" />
	<ice:outputStyle href="./styles/Sites.css" />
	<ice:outputStyle href="./styles/popup.css" />
	<ice:outputStyle href="./styles/Menu.css" />
</ice:outputHead>
	
	<ice:panelPopup rendered="#{invoiceLister.popupRender}"
					visible="#{invoiceLister.popupRender}"
					modal="true"
					draggable="false"
					autoCentre="true"
					style="margin: auto;">					
		<f:facet name="header">
			<!-- Header Popup (edit, new) Start -->
			<ice:panelGrid columns="2" styleClass="popupHeaderWrapper" style="width: 100%" columnClasses="headerCol1 headerCol2">
	            <!-- ToDo: Dynamisch: Neu/Aendern -->
	            <ice:outputText
	                    value="#{msg.tableEditInvoice}"
	                    styleClass="popupHeaderText"/>
	            <ice:commandButton image="images/closepopup.gif" action="#{invoiceLister.closePopup}"/>
        	</ice:panelGrid>
        	<!-- Header Popup (edit, new) End -->
		</f:facet>
		<f:facet name="body">
		<!-- Labels + Inputtexts Popup (edit & new) Start -->
		<ice:panelGroup>
			<ice:panelGrid columns="2" styleClass="panelPosition" columnClasses="columnPopup1 columnPopup2">
				<ice:outputLabel value="#{msg.tableInvoicenumber}" styleClass="Text"/>
				<ice:inputText styleClass="Input" value="#{invoiceLister.curInvoice.invoicenumber}"/>
				<ice:outputLabel value="#{msg.tableSum}" styleClass="Text"/>			
					
				<ice:inputText id="inputSum" styleClass="Input" value="#{invoiceLister.curInvoice.sum }" partialSubmit="true">
					<f:validator validatorId="sumValidator" for="inputSum" />
				</ice:inputText>
				
				<ice:outputLabel value="#{msg.tableEstimation}" styleClass="Text"/>
				<ice:outputLabel styleClass="Input" value="#{invoiceLister.curInvoice.estimation}"/>
				<ice:outputLabel value="#{msg.tableDuedate}" styleClass="Text"/>
				<ice:selectInputDate highlightValue="#{invoiceLister.curInvoice.duedate}" value="#{invoiceLister.curInvoice.duedate}" renderAsPopup="true"><f:convertDateTime pattern="dd.MM.yyyy" timeZone="Europe/Berlin"/></ice:selectInputDate>
       			<ice:outputLabel value="#{msg.tableInvoicestate}" styleClass="Text"/>
       			<ice:selectOneMenu value="#{invoiceLister.curInvoice.tblInvoicestate.descriptionIs}"  styleClass="Input" valueChangeListener="#{invoiceLister.changeInvoicestate}">
					  <f:selectItems value="#{invoiceLister.invoicestateListDescription}"/>
       			</ice:selectOneMenu>
       			<ice:outputLabel value="#{msg.tableOrdernumber}" styleClass="Text"/>
       			<ice:outputLabel styleClass="Input" value="#{invoiceLister.curInvoice.tblSettlement.tblOrder.ordernumber}"/>
       			<ice:outputLabel value="#{msg.tableIncometype}" styleClass="Text"/>
       			<ice:outputLabel styleClass="Input" value="#{invoiceLister.curInvoice.tblSettlement.tblIncometype.descriptionIt}"/>
       			<ice:outputLabel value="#{msg.tableSettlementnumber}" styleClass="Text"/>
       			<ice:outputLabel styleClass="Input" value="#{invoiceLister.curInvoice.tblSettlement.idSettlement}"/>		
			</ice:panelGrid>
			<ice:panelGrid columns="2" columnClasses="headerCol2 headerCol1" style="width: 500px;">
				<ice:commandButton styleClass="Base_Text_Center buttonCol" value="#{msg.buttonSave}" action="#{invoiceLister.updateInvoice}"/>
				<ice:commandButton  styleClass="Base_Text_Center buttonCol" value="#{msg.buttonCancel}" action="#{invoiceLister.closePopup}"/>
			</ice:panelGrid>
		</ice:panelGroup>
		<!-- Labels + Inputtexts Popup (edit & new) End -->
		</f:facet>
	</ice:panelPopup>
	
</html>