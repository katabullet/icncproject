<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ice="http://www.icesoft.com/icefaces/component"
	template="/WEB-INF/templates/defaultTemplate.jspx">
<ice:outputHead>
	<ice:outputStyle href="./xmlhttp/css/rime/rime.css" />
	<ice:outputStyle href="./styles/Sites.css" />
	<ice:outputStyle href="./styles/popup.css" />
	<ice:outputStyle href="./styles/Menu.css" />
</ice:outputHead>
	
	<ice:panelPopup rendered="#{incometypeLister.popupRender}"
					visible="#{incometypeLister.popupRender}"
					modal="true"
					draggable="false"
					autoCentre="true"
					style="margin: auto;">					
		<f:facet name="header">
			<!-- Header Popup (edit, new) Start -->
			<ice:panelGrid columns="2" styleClass="popupHeaderWrapper panelGridHeader" columnClasses="headerCol1 headerCol2">
	            <!-- ToDo: Dynamisch: Neu/Aendern -->
	            <ice:outputText
	                    value="#{msg.tableEditIncometype}"
	                    styleClass="popupHeaderText"/>
	            <ice:commandButton image="images/closepopup.gif" action="#{incometypeLister.closePopup}"/>
        	</ice:panelGrid>
        	<!-- Header Popup (edit, new) End -->
		</f:facet>
		<f:facet name="body">
		<!-- Labels + Inputtexts Popup (edit & new) Start -->
		<ice:panelGroup>
			<ice:panelGrid columns="2" styleClass="panelPosition" columnClasses="columnPopup1 columnPopup2">
				
				<ice:outputLabel value="#{msg.tableDescriptionIt}" styleClass="Text"/>
				<ice:inputText styleClass="Input" value="#{incometypeLister.curIncometype.descriptionIt}" partialSubmit="true"/>	
					
			</ice:panelGrid>
			
			<ice:panelGrid styleClass="panelGridSpace1">
				<ice:messages layout="list" errorClass="iceMsgError"></ice:messages>
			</ice:panelGrid>
			<ice:panelGrid columns="2" columnClasses="headerCol2 headerCol1" styleClass="panelGridButtons">
				<ice:commandButton styleClass="Base_Text_Center buttonCol" value="#{msg.buttonSave}" action="#{incometypeLister.updateEntity}"/>
				<ice:commandButton  styleClass="Base_Text_Center buttonCol" value="#{msg.buttonCancel}" action="#{incometypeLister.closePopup}"/>
			</ice:panelGrid>
			<ice:panelGrid styleClass="panelGridSpace2">
				<ice:outputText value=""/>
			</ice:panelGrid>
		</ice:panelGroup>
		<!-- Labels + Inputtexts Popup (edit & new) End -->
		</f:facet>
	</ice:panelPopup>
	
</html>