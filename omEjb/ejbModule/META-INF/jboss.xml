<?xml version="1.0" encoding="UTF-8"?>
<jboss xmlns="http://www.jboss.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee jboss_5_0.xsd"
	version="3.0">
	<!-- To avoid problems with passivating EntityManager instances, deactivate
		it completely for Editors! -->
	<enterprise-beans>
		<session>
			<ejb-name>AdministrativeLister</ejb-name>
			<local-jndi-name>mdmAdministrativeLister/Local</local-jndi-name>
			<cache-config>
				<idle-timeout-seconds>1000</idle-timeout-seconds>
				<remove-timeout-seconds>2000</remove-timeout-seconds>
			</cache-config>
		</session>
		<session>
			<ejb-name>AdministrativeEditor</ejb-name>
			<local-jndi-name>mdmAdministrativeEditor/Local</local-jndi-name>
			<cache-config>
				<idle-timeout-seconds>2000</idle-timeout-seconds>
				<remove-timeout-seconds>1800</remove-timeout-seconds>
			</cache-config>

		</session>
		<session>
			<ejb-name>EntityLister</ejb-name>
			<jndi-name>mdmEntityLister/Remote</jndi-name>
		</session>
		<session>
			<ejb-name>EntityViewer</ejb-name>
			<local-jndi-name>mdmEntityViewer/Local</local-jndi-name>
			<cache-config>
				<idle-timeout-seconds>1000</idle-timeout-seconds>
				<remove-timeout-seconds>2000</remove-timeout-seconds>
			</cache-config>
		</session>
		<session>
			<ejb-name>MessageProvider</ejb-name>
			<jndi-name>mdmMessageProvider/Remote</jndi-name>
		</session>
		<session>
			<ejb-name>PermissionService</ejb-name>
			<local-jndi-name>mdmPermissionService/Local</local-jndi-name>
		</session>
		<session>
			<ejb-name>PropertiesProvider</ejb-name>
			<jndi-name>mdmPropertiesProvider/Remote</jndi-name>
		</session>
		<session>
			<ejb-name>TransactionEditor</ejb-name>
			<local-jndi-name>mdmTransactionEditor/Local</local-jndi-name>
			<cache-config>
				<idle-timeout-seconds>2000</idle-timeout-seconds>
				<remove-timeout-seconds>1800</remove-timeout-seconds>
			</cache-config>
		</session>
		<session>
			<ejb-name>TransactionLister</ejb-name>
			<local-jndi-name>mdmTransactionLister/Local</local-jndi-name>
		</session>
		<session>
			<ejb-name>ValidationService</ejb-name>
			<jndi-name>mdmValidationService/Remote</jndi-name>
		</session>
		<session>
			<ejb-name>HelpTextEditor</ejb-name>
			<local-jndi-name>mdmHelpTextEditor/Local</local-jndi-name>
			<cache-config>
				<idle-timeout-seconds>2000</idle-timeout-seconds>
				<remove-timeout-seconds>1800</remove-timeout-seconds>
			</cache-config>
		</session>
		<session>
			<ejb-name>SecurityLabelEditor</ejb-name>
			<local-jndi-name>mdmSecurityLabelEditor/Local</local-jndi-name>
			<cache-config>
				<idle-timeout-seconds>2000</idle-timeout-seconds>
				<remove-timeout-seconds>1800</remove-timeout-seconds>
			</cache-config>
		</session>
		<session>
			<ejb-name>SecurityLabelLister</ejb-name>
			<local-jndi-name>mdmSecurityLabelLister/Local</local-jndi-name>
			<cache-config>
				<idle-timeout-seconds>1000</idle-timeout-seconds>
				<remove-timeout-seconds>2000</remove-timeout-seconds>
			</cache-config>
		</session>
		<session>
			<ejb-name>UserEditor</ejb-name>
			<local-jndi-name>mdmUserEditor/Local</local-jndi-name>
			<cache-config>
				<idle-timeout-seconds>2000</idle-timeout-seconds>
				<remove-timeout-seconds>1800</remove-timeout-seconds>
			</cache-config>
		</session>
		<session>
			<ejb-name>UserLister</ejb-name>
			<local-jndi-name>mdmUserLister/Local</local-jndi-name>
			<cache-config>
				<idle-timeout-seconds>1000</idle-timeout-seconds>
				<remove-timeout-seconds>2000</remove-timeout-seconds>
			</cache-config>
		</session>
		<session>
			<ejb-name>RoleEditor</ejb-name>
			<local-jndi-name>mdmRoleEditor/Local</local-jndi-name>
			<cache-config>
				<idle-timeout-seconds>2000</idle-timeout-seconds>
				<remove-timeout-seconds>1800</remove-timeout-seconds>
			</cache-config>
		</session>
		<session>
			<ejb-name>Distributor</ejb-name>
			<jndi-name>mdmDistributor/Local</jndi-name>
		</session>
		<session>
			<ejb-name>HistoryLister</ejb-name>
			<local-jndi-name>mdmHistoryLister/Local</local-jndi-name>
		</session>
		<message-driven>
			<ejb-name>TransactionQueue</ejb-name>
			<create-destination>true</create-destination>
		</message-driven>
	</enterprise-beans>
</jboss>

